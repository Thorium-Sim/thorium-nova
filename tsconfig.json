{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // TODO: Set up a separate TSConfig that uses the production JSX
    "jsx": "react-jsxdev",
    "baseUrl": ".",
    "paths": {
      "*": ["test/*"],
      "server/*": ["server/*"],
      "client/*": ["client/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules"],
  "include": ["client", "server", "test", "babel.config.js", "public/webgl.js", "public/generateNebulaMap.js"]
}
